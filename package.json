{
  "name": "ChatApp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "android:clean": "cd android && ./gradlew clean && cd .. && react-native run-android",
    "build-apk": "cd android && ./gradlew clean && ./gradlew assemblerelease && cd app/build/outputs/apk/release && open .",
    "git:push": "node -e \"const msg = process.argv[1]; if (!msg) { console.error('\\x1b[31mError: Commit message required!\\x1b[0m'); process.exit(1); } require('child_process').execSync('git add . && git commit -m \\\"' + msg + '\\\" && git push', { stdio: 'inherit' });\"",
    "test": "jest"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.1.2",
    "@react-native-firebase/app": "^22.1.0",
    "@react-native-firebase/auth": "^22.1.0",
    "@react-native-firebase/database": "^22.1.0",
    "@react-native-firebase/firestore": "^22.1.0",
    "@react-navigation/native": "^7.1.7",
    "@react-navigation/native-stack": "^7.3.11",
    "@react-navigation/stack": "^7.3.0",
    "@reduxjs/toolkit": "^2.7.0",
    "formik": "^2.4.6",
    "moment": "^2.30.1",
    "react": "19.0.0",
    "react-native": "0.79.2",
    "react-native-azure-auth": "^1.8.17",
    "react-native-gesture-handler": "^2.25.0",
    "react-native-gifted-chat": "^2.8.1",
    "react-native-reanimated": "^3.3.0",
    "react-native-safe-area-context": "^5.4.0",
    "react-native-screens": "^4.10.0",
    "react-native-vector-icons": "^10.2.0",
    "react-redux": "^9.2.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.27.1",
    "@react-native-community/cli": "18.0.0",
    "@react-native-community/cli-platform-android": "18.0.0",
    "@react-native-community/cli-platform-ios": "18.0.0",
    "@react-native/babel-preset": "0.79.2",
    "@react-native/eslint-config": "0.79.2",
